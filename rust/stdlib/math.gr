# math.gr - Mathematical functions
module math_module alias math

# Constants
pi = 3.141592653589793
e = 2.718281828459045

fn abs(x) {
    if x < 0 {
        return -x
    }
    return x
}

fn max(a, b) {
    if a > b {
        return a
    }
    return b
}

fn min(a, b) {
    if a < b {
        return a
    }
    return b
}

fn pow(base, exponent) {
    return base ^ exponent
}

__version = "0.1.0"
