# Simple BigNum Test - Phase 1B
# Basic test without requiring io module

# Basic declarations
bignum x = 10.5
bignum y = 20.5
bignum sum = x + y

# Arithmetic
bignum a = 100.0
bignum b = 30.0
bignum diff = a - b
bignum product = a * b
bignum quotient = a / b

# Power
bignum base = 2.0
bignum exp = 10.0
bignum power = base ** exp

# Integer division
bignum int_div = a // b
bignum modulo = a % b

# With integer mode
configure { integer: :integer } {
    bignum p = 5.7
    bignum q = 3.2
    result_truncated = p + q
}

# Complex expression
bignum m = 5.0
bignum n = 3.0
bignum o = 2.0
complex = (m + n) * o

