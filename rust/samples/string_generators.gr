# Password character sets
fn show_password_charset() {
    lower = string.generate("a", "z")
    upper = string.generate("A", "Z")
    nums = string.generate("0", "9")
    charset = lower + upper + nums
    print("Password charset (" + charset.length().to_string() + " chars):")
    print("  Lowercase: " + lower)
    print("  Uppercase: " + upper)
    print("  Digits: " + nums)
}

show_password_charset()
print("")

# Text box drawing
fn draw_box(text) {
    width = text.length() + 2
    top = "+" + string.generate("-", width) + "+"
    middle = "| " + text + " |"
    bottom = top

    print(top)
    print(middle)
    print(bottom)
}

draw_box("Important Message")
print("")

# Table formatting
fn format_table_row(cols, widths) {
    row = "|"
    i = 0
    for col in cols {
        col_str = col.to_string()
        padding_needed = widths[i] - col_str.length()
        # Handle case where content is longer than width
        if padding_needed < 0 {
            padding_needed = 0
        }
        row = row + " " + col_str + string.generate(" ", padding_needed) + " |"
        i = i + 1
    }
    print(row)
}

fn format_table_separator(widths) {
    sep = "+"
    for width in widths {
        sep = sep + string.generate("-", width + 2) + "+"
    }
    print(sep)
}

print("Data Table:")
widths = [10, 8, 12]
format_table_separator(widths)
format_table_row(["Name", "Age", "City"], widths)
format_table_separator(widths)
format_table_row(["Alice", 30, "New York"], widths)
format_table_row(["Bob", 25, "San Francisco"], widths)
format_table_row(["Charlie", 35, "Los Angeles"], widths)
format_table_separator(widths)
print("")

