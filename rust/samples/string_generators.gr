# String Generators - Demonstration
# Shows string.generate() static method with two modes

print("=== String Generators Demo ===")
print("")

# ===================================================================
# MODE 1: REPETITION - string.generate(str, count)
# ===================================================================

print("--- Repetition Mode ---")
print("")

# Basic repetition
padding = string.generate(" ", 10)
print("Padding (10 spaces): [" + padding + "]")

separator = string.generate("-", 40)
print("Separator: " + separator)

# Dynamic repetition for formatting
fn format_title(title) {
    border = string.generate("=", title.length() + 4)
    print(border)
    print("| " + title + " |")
    print(border)
}

format_title("Welcome to Graphoid")
print("")

# Bar chart visualization
fn simple_bar_chart(label, value, max_width) {
    bar = string.generate("#", value)
    spaces = string.generate(" ", max_width - value)
    print(label + ": " + bar + spaces + " (" + value.to_string() + ")")
}

print("Sales Data:")
simple_bar_chart("Q1", 25, 50)
simple_bar_chart("Q2", 38, 50)
simple_bar_chart("Q3", 45, 50)
simple_bar_chart("Q4", 50, 50)
print("")

# ===================================================================
# MODE 2: SEQUENCE - string.generate(from_char, to_char)
# ===================================================================

print("--- Sequence Mode ---")
print("")

# Character ranges
lowercase = string.generate("a", "z")
print("Lowercase alphabet: " + lowercase)

uppercase = string.generate("A", "Z")
print("Uppercase alphabet: " + uppercase)

digits = string.generate("0", "9")
print("Digits: " + digits)

# Partial ranges
hex_lower = string.generate("a", "f")
print("Hex digits (lower): " + hex_lower)

# Reverse ranges
reverse_alpha = string.generate("z", "a")
print("Reverse alphabet: " + reverse_alpha)
print("")

