describe("Basic Math", () => {
    it("adds numbers", () => {
        expect(2 + 3).to_equal(5)
    })

    it("subtracts numbers", () => {
        expect(10 - 4).to_equal(6)
    })

    it("multiplies numbers", () => {
        expect(3 * 4).to_equal(12)
    })

    context("with negative numbers", () => {
        it("handles negative addition", () => {
            expect(-5 + 3).to_equal(-2)
        })

        it("handles negative multiplication", () => {
            expect(-2 * -3).to_equal(6)
        })
    })
})

