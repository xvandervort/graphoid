# Comprehensive function and lambda test

# Regular functions
func fibonacci(n) {
    if n <= 1 {
        return n
    }
    return fibonacci(n - 1) + fibonacci(n - 2)
}

print "Fibonacci(6) = " + fibonacci(6).to_string()

# Lambda expressions  
multiply = (x, y) => x * y
result = multiply(7, 8)
print "7 * 8 = " + result.to_string()

# Function with lists
func sum_list(numbers) {
    total = 0
    i = 0
    while i < numbers.size() {
        total = total + numbers[i]
        i = i + 1
    }
    return total
}

test_numbers = [1, 2, 3, 4, 5]
sum_result = sum_list(test_numbers)
print "Sum of [1,2,3,4,5] = " + sum_result.to_string()

# Functions with early returns
func find_max(a, b, c) {
    if a >= b {
        if a >= c {
            return a
        }
    }
    if b >= c {
        return b
    }
    return c
}

max_val = find_max(3, 7, 5)
print "Max of 3, 7, 5 = " + max_val.to_string()

print "All function tests completed successfully!"