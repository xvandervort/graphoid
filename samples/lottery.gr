#!/usr/bin/env glang
# Simple calculator of shares.
#

jackpot = 33
shares = {
  'bizness': 0.5,
  'liquid': 2,
  'kids': 2.5
}

precision 2 {
  take_home = jackpot / 4
  unit = take_home / 5
  working = {}

  for k in shares.keys {
    working[k] = shares[k].value * unit
  }
}

print "Take home: " + take_home.to_string
print "by usage:"
print working
