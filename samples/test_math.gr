#!/usr/bin/env glang
# Test program for mathematical methods and type casting

# Load mathematical constants
load "stdlib/math.gr"

print("Testing Mathematical Methods and Type Casting")
print("==============================================")

# Basic mathematical operations
x = 16
print("x = 16")
print("x.abs() = " + x.abs().to_string())
print("x.sqrt() = " + x.sqrt().to_string())
print("x.log() = " + x.log().to_string())
print("x.pow(2) = " + x.pow(2).to_string())

print("")

# Rounding operations  
y = 3.14159
print("y = 3.14159")
print("y.rnd() = " + y.rnd().to_string())
print("y.rnd(2) = " + y.rnd(2).to_string())
print("y.rnd_up() = " + y.rnd_up().to_string())
print("y.rnd_up(2) = " + y.rnd_up(2).to_string())
print("y.rnd_dwn() = " + y.rnd_dwn().to_string())
print("y.rnd_dwn(2) = " + y.rnd_dwn(2).to_string())

print("")

# Mathematical constants
print("Mathematical Constants")
print("pi = " + pi.to_string())
print("e = " + e.to_string())

print("")

# Type casting examples
print("Type Casting Examples")
print("(42).to_string() = " + (42).to_string())
print("\"123\".to_num() = " + "123".to_num().to_string())
print("true.to_string() = " + true.to_string())
print("true.to_num() = " + true.to_num().to_string())
print("[1, 2, 3].to_string() = " + [1, 2, 3].to_string())

print("")

# Area calculation using constants
r = 5
area = pi * r.pow(2)
print("Circle with radius " + r.to_string() + " has area " + area.to_string())

print("")
print("All methods working correctly!")