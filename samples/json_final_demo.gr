# JSON Implementation Concept in Glang
print("=== JSON Implementation Concept in Glang ===")
print("")

# Demonstrate JSON encoding
print("1. JSON Encoding:")

# String encoding
text = "hello world"
json_string = "\"" + text + "\""
print("  String: " + json_string)

# Number encoding
num = 42
json_number = num.to_string()
print("  Number: " + json_number)

# Boolean encoding
bool_true = true
bool_false = false

if bool_true {
    print("  Boolean true: true")
} else {
    print("  Boolean true: false")
}

if bool_false {
    print("  Boolean false: true")
} else {
    print("  Boolean false: false")
}

print("")

# Demonstrate JSON parsing concepts
print("2. JSON Parsing Concepts:")

# Parse JSON string - extract content between quotes
json_text = "\"sample text\""
print("  Input: " + json_text)

if json_text.length() >= 2 {
    first_char = json_text[0]
    last_char = json_text[json_text.length() - 1]

    if first_char == "\"" and last_char == "\"" {
        # Extract content
        content = ""
        i = 1
        while i < json_text.length() - 1 {
            content = content + json_text[i]
            i = i + 1
        }
        print("  Parsed string: " + content)
    }
}

# Parse JSON number
json_num_text = "123"
print("  Input: " + json_num_text)
parsed_num = json_num_text.to_num()
print("  Parsed number: " + parsed_num.to_string())

print("")

# Demonstrate validation concepts
print("3. JSON Validation:")

# Valid string check
test_string = "\"valid\""
is_valid_string = false

if test_string.length() >= 2 {
    if test_string[0] == "\"" and test_string[test_string.length() - 1] == "\"" {
        is_valid_string = true
    }
}

print("  " + test_string + " is valid string: " + is_valid_string.to_string())

# Valid number check
test_number = "456"
parsed_test = test_number.to_num()
is_valid_number = parsed_test != 0 or test_number == "0"

print("  " + test_number + " is valid number: " + is_valid_number.to_string())

# Valid boolean check
test_bool = "true"
is_valid_bool = test_bool == "true" or test_bool == "false"
print("  " + test_bool + " is valid boolean: " + is_valid_bool.to_string())

print("")

# Demonstrate array-like structure processing
print("4. Array Processing Concept:")

# Simulate simple array parsing
simple_array = "[1,2,3]"
print("  Input: " + simple_array)

if simple_array[0] == "[" and simple_array[simple_array.length() - 1] == "]" {
    print("  Valid array format detected")

    # Extract content
    content = ""
    i = 1
    while i < simple_array.length() - 1 {
        content = content + simple_array[i]
        i = i + 1
    }
    print("  Array content: " + content)
}

